generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  password    String?
  provider    String    @default("local") 
  documents   Document[]
  createdAt   DateTime  @default(now())
}

model Document {
  id          String       @id @default(uuid())
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  filename    String
  filepath    String
  ocrResult   OcrResult?
  interactions Interaction[]
  createdAt   DateTime     @default(now())
}

model OcrResult {
  id          String   @id @default(uuid())
  document    Document @relation(fields: [documentId], references: [id])
  documentId  String   @unique
  content     String
  createdAt   DateTime @default(now())
}

model Interaction {
  id          String    @id @default(uuid())
  document    Document  @relation(fields: [documentId], references: [id])
  documentId  String
  question    String
  answer      String
  createdAt   DateTime  @default(now())
}
